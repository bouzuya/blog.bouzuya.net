<div class="post">
  <span class="date"><a class="permalink" href="{{permalink}}">{{date}}</a></span>
  <span class="title"><a class="permalink" href="{{permalink}}">{{title}}</a></span>
  <div class="tags-region"></div>
  <div class="content">{{{html}}}</div>
</div>
<nav>
  <ul>
    {{#if older}}<li class="older"><a href="{{older}}"><i class="fa fa-chevron-left"></i></a></li>{{/if}}
    {{#if newer}}<li class="newer"><a href="{{newer}}"><i class="fa fa-chevron-right"></i></a></li>{{/if}}
  </ul>
</nav>
